<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ty.henry.jumpingstats.competitions.AddEditCompetitionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/countrySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/cityEditText"
            style="@style/nameEditText"
            android:hint="@string/city" />

        <EditText
            android:id="@+id/pointKEditText"
            style="@style/floatEditText"
            android:hint="@string/pointK" />

        <EditText
            android:id="@+id/hillSizeEditText"
            style="@style/floatEditText"
            android:hint="@string/hillSize" />

        <EditText
            android:id="@+id/headWindEditText"
            style="@style/floatEditText"
            android:hint="@string/headWindPoints" />

        <EditText
            android:id="@+id/tailWindEditText"
            style="@style/floatEditText"
            android:hint="@string/tailWindPoints"
            android:imeOptions="actionDone"/>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/saveButton"
            style="@style/saveButtonStyle"/>

    </LinearLayout>

</ScrollView>
